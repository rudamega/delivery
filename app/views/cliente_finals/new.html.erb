<div class="container">
  <div class="text-center" id="location"><h6 class="btn btn-success text-center">Tomar mi ubicacion</h6></div>
  <div id="map" style="height: 300px; width: 600px" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div class="row justify-content-center">
    <div class="col-12">
      <%= simple_form_for(@cliente) do |f| %>
        <%= f.input :name, label: "Al llegar, por quiÃ©n preguntamos?"%>
        <%= f.input :nro, label: "Nro de telefono?"%>
        <%= f.input :direccion, label: "Direccion?"%>
        <%= f.input :latitud, label: "Latitud?", input_html: { id: :latitud}%>
        <%= f.input :longitud, label: "Longitud?", input_html: { id: :longitud} %>
        <%= f.input :email, label: "Email?"%>
        <div class="d-flex justify-content-center">
        <%= f.submit "Guardar lugar de entrega"%>
        </div>
      <% end %>
      <%= link_to 'Back', root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
